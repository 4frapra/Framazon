<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="127.5dp"
        android:text="𝕱𝖗𝖆𝖒𝖆𝖟𝖔𝖓"
        android:textColor="#ffffff"
        android:textSize="32dp"
        android:textAllCaps="true"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="90dp"
        android:background="@drawable/framazon000"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="112.5dp"
            android:text="𝔉𝔢𝔞𝔱𝔲𝔯𝔢𝔡 𝔓𝔯𝔬𝔡𝔲𝔠𝔱𝔰"
            android:textSize="24dp"
            android:textAllCaps="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72.5dp"
            android:text="𝔇𝔢𝔞𝔡𝔭𝔬𝔬𝔩 𝔗-𝔰𝔥𝔦𝔯𝔱 'ℑ ℌ𝔄𝔙𝔈 ℑ𝔖𝔖𝔘𝔈𝔖'"
            android:textSize="16dp"
            android:textAllCaps="true"/>

        <ImageView
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:layout_marginLeft="110dp"
            android:background="@drawable/framazon002"/>

    </LinearLayout>

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:hint="𝔑𝔞𝔪𝔢"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/framazon001"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="95dp"
            android:text="+"
            android:textColor="#ffffff"
            android:onClick="increase"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="32dp"
            android:text="1"
            android:textColor="#ffffff"
            android:id="@+id/quantity_text_view"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/framazon001"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="32dp"
            android:text="-"
            android:textColor="#ffffff"
            android:onClick="decrease"/>


    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="114dp"
        android:text="1 𝔶𝔢𝔞𝔯 𝔤𝔲𝔞𝔯𝔞𝔫𝔱𝔢𝔢($5)"
        android:textColor="#ffffff"
        android:id="@+id/year"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:text="𝔖𝔥𝔦𝔭𝔭𝔦𝔫𝔤 𝔦𝔫 2 𝔡𝔞𝔶𝔰($5)"
        android:textColor="#ffffff"
        android:id="@+id/shipping"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:text="𝔇𝔢𝔞𝔡𝔭𝔬𝔬𝔩 𝔭𝔞𝔫𝔱𝔰($10)"
        android:textColor="#ffffff"
        android:id="@+id/pants"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="187dp"
        android:text="$5"
        android:textColor="#ffffff"
        android:id="@+id/price_text_view"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/framazon004"
        android:layout_marginLeft="150dp"
        android:text="𝔒ℜ𝔇𝔈ℜ"
        android:textColor="#ffffff"
        android:textAllCaps="true"
        android:onClick="submitOrder"/>

</LinearLayout>